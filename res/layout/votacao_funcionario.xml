<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/ScrollView01votacao"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true" 
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/fotoVotacao"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:background="@layout/foto_funcionario" />

            <TextView
                android:id="@+id/txNomeFuncionario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fotoVotacao"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txCargoFuncionario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txNomeFuncionario"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:textSize="20sp" />

            <TableLayout
                android:id="@+id/table2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/fotoVotacao"
                android:orientation="vertical"
                android:padding="10sp"
                android:shrinkColumns="0,1" >

                <Space android:layout_height="40dp" />

                <TableRow
                    android:id="@+id/tableRow11"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp" >

                    <TextView
                        android:id="@+id/txNota"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_span="2"
                        android:text="Qual a nota para o atendimento?"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow12"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent" >

                    <RatingBar
                        android:id="@+id/ratingBar1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="43dp"
                        android:layout_marginRight="43dp"
                        android:layout_span="2"
                        android:numStars="5"
                        android:rating="0"
                        android:stepSize="1" />
                </TableRow>

                <Space android:layout_height="20dp" />

                <TableRow
                    android:id="@+id/tableRow10"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/txAvaliacao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_span="2"
                        android:text="Como você foi atendido?"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <CheckBox
                        android:id="@+id/comSorriso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:button="@layout/custom_checkbox_design"
                        android:text="Com Sorriso"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/comRapidez"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:button="@layout/custom_checkbox_design"
                        android:text="Com rapidez"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <CheckBox
                        android:id="@+id/comAtencao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:button="@layout/custom_checkbox_design"
                        android:text="Com atenção"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/comEmpatia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:button="@layout/custom_checkbox_design"
                        android:text="Com empatia"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <CheckBox
                        android:id="@+id/comRespeito"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:button="@layout/custom_checkbox_design"
                        android:text="Com respeito"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/comEducacao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:button="@layout/custom_checkbox_design"
                        android:text="Com educação"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <CheckBox
                        android:id="@+id/comInformacoesCorretas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:button="@layout/custom_checkbox_design"
                        android:text="Com informações corretas"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/comPontualidade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:button="@layout/custom_checkbox_design"
                        android:text="Com pontualidade"
                        android:textSize="12sp" />
                </TableRow>

                <Space android:layout_height="20dp" />

                <TextView
                    android:id="@+id/textViewComentario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Comentários e observações"
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/linearLayoutComentario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/editTextComentario"
                        android:layout_width="wrap_content"
                        android:layout_height="102dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="Adicione comentários ou observações sobre o atendimento recebido"
                        android:inputType="textMultiLine"
                        android:textColorHint="#CCCCCC" />
                </LinearLayout>
            </TableLayout>

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/btAvaliar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/botao_avaliar" />

                <ImageButton
                    android:id="@+id/btCancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/botao_cancelar" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressbar_loading_votacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="80dp"
        android:layout_marginTop="57dp"
        android:indeterminate="true" />

</LinearLayout>